<?xml version="1.0" encoding="utf-8" ?> 
<RootElement>
	<Container Layout="Layout(0, 0.9, 2, 0.2)"
		LayoutManager="XSpacerLayout()">
	
		<Slider Id="MaxValue"
            Position="Vector2(-0.65, 0.75)"
			Padding="Vector2(10, 30)"
			SilderWidth="150"
			Value="100" >
			
		</Slider>
		
		<Button Layout="TextLayout(10, 10, -0.25, 0.75, 0, 0, true)"
			BorderWidth="2"
			CornerRadius="0.2"
			TextSize="17"
			Click="BubbleSortButton()" >
			Bubble Sort
		</Button>
		
		<EnterBox Layout="TextLayout(5, 5, 0, 0.75, 0.15, 0, true)"
			BorderWidth="2"
			CornerRadius="0.1"
			TextSize="17"
			TextEntered="OnTextInput()" />
			
		<Button Layout="TextLayout(10, 10, 0.25, 0.75, 0, 0, true)"
			BorderWidth="2"
			CornerRadius="0.2"
			TextSize="17"
			Click="InsertionSortButton()" >
			Insertion Sort
		</Button>
		
		<Button Layout="TextLayout(10, 10, 0.65, 0.75, 0, 0, true)"
			BorderWidth="2"
			CornerRadius="0.2"
			TextSize="17"
			Click="Randomise()" >
			Randomise
		</Button>
		
	</Container>
	
	<BarContainer Id="MainContainer" Layout="Layout(0, 0, 1.5, 1.5)" >
		<Property Name="Colour" Value="ColourF(0.3, 0.3, 0.3)" />
		
		<Bar Value="50" />
		<Bar Value="20" />
		<Bar Value="70" />
		<Bar Value="10" />
		<Bar Value="80" />
		<Bar Value="90" />
		<Bar Value="45" />
		<Bar Value="72" />
		
	</BarContainer>
</RootElement>